<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record
            id="order_customer_view_tree"
            model="ir.ui.view">
        <field name="name">order.customer.view.tree</field>
        <field name="model">order.customer</field>
        <field
                name="arch"
                type="xml">
            <tree>
                <field name="name" />
                <field name="address" />
                <field name="email" />
                <field name="phone" />
            </tree>
        </field>
    </record>

    <record
            id="order_customer_view_form"
            model="ir.ui.view">
        <field name="name">order.customer.view.form</field>
        <field name="model">order.customer</field>
        <field
                name="arch"
                type="xml">
            <form string="">
                <sheet>
                    <group
                            name="details"
                            string="string">
                        <group>
                            <field name="name" />
                            <field name="address" />
                        </group>
                        <group>
                            <field name="phone" />
                            <field name="email" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record
            id="action_order_in"
            model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">order.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field
                name="help"
                type="html">
            <p class="o_view_nocontent_smiling_face"> Create your first patient </p>
        </field>
    </record>

    <menuitem
            id="menu_customer"
            name="Customers"
            sequence="0"
            action="action_order_in"
            parent="menu_customer_master" />

</odoo>